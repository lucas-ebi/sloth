{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "urn:sloth:schemas:mmcif_json_nested_schema",
    "title": "SLOTH mmCIF Nested JSON Schema",
    "description": "Structural schema for nested JSON format produced by SLOTH exporter. This represents a hierarchical structure where related categories are nested within their parent categories. Validates only JSON structure/topology, not mmCIF content semantics. Content validation is handled by PDBML XSD schema.",
    "type": "object",
    "properties": {
        "blocks": {
            "description": "mmCIF data blocks",
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z][a-zA-Z0-9_]*$": {
                    "description": "Data block name (e.g., 'DEMO', '1ABC')",
                    "type": "object",
                    "patternProperties": {
                        "^_[a-zA-Z][a-zA-Z0-9_]*$": {
                            "description": "mmCIF category (e.g., '_entity', '_citation')",
                            "oneOf": [
                                {
                                    "description": "Single-row category (non-loop)",
                                    "type": "object",
                                    "patternProperties": {
                                        "^[a-zA-Z][a-zA-Z0-9_]*$": {
                                            "description": "mmCIF item value or nested child category",
                                            "oneOf": [
                                                {
                                                    "type": "string",
                                                    "description": "Regular mmCIF item value"
                                                },
                                                {
                                                    "type": "array",
                                                    "description": "Nested child category",
                                                    "items": {
                                                        "type": "object",
                                                        "additionalProperties": true
                                                    },
                                                    "minItems": 1
                                                }
                                            ]
                                        }
                                    },
                                    "additionalProperties": false
                                },
                                {
                                    "description": "Multi-row category (loop) with potential nesting",
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "patternProperties": {
                                            "^[a-zA-Z][a-zA-Z0-9_]*$": {
                                                "description": "mmCIF item value or nested child category",
                                                "oneOf": [
                                                    {
                                                        "type": "string",
                                                        "description": "Regular mmCIF item value"
                                                    },
                                                    {
                                                        "type": "array",
                                                        "description": "Nested child category",
                                                        "items": {
                                                            "type": "object",
                                                            "additionalProperties": true
                                                        },
                                                        "minItems": 1
                                                    }
                                                ]
                                            }
                                        },
                                        "additionalProperties": false,
                                        "minProperties": 1
                                    },
                                    "minItems": 1
                                }
                            ]
                        }
                    },
                    "additionalProperties": false,
                    "minProperties": 1
                }
            },
            "additionalProperties": false,
            "minProperties": 1
        }
    },
    "required": ["blocks"],
    "additionalProperties": false
}
